<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/selecCategoria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Seleccionar categorÃ­a" />

    <Spinner
        android:id="@+id/cmbProductosCategoria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/listaProductos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lista de productos" />

    <ListView
        android:id="@+id/lstProductos"
        android:layout_width="match_parent"
        android:layout_height="384dp"
        android:choiceMode="singleChoice"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/cantAPedir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cantidad a pedir" />

    <EditText
        android:id="@+id/edtProdCantidad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="1"
        android:inputType="number"
        android:text="1"
        android:visibility="visible" />

    <Button
        android:id="@+id/btnProdAddPedido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Agregar"
        android:visibility="visible" />
</LinearLayout>